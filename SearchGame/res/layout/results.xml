<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundBlue"
    tools:context="com.searchgame.activity.PlayGameActivity"
    android:onClick="resultsScreenClick" 
    android:orientation="vertical" >

    <TextView
	    android:id="@+id/ContinueText"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="15dp"
	    android:gravity="center"
	    android:textSize="10pt"
	    android:text="Touch Screen to Continue"
	    android:textColor="@color/disabledText" />
    
    <LinearLayout
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_margin="25dp"
        android:gravity="center"
        android:orientation="vertical">
	    <TextView
	        android:id="@+id/GameResultsText"
        	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	        android:textSize="18pt"
	        android:text="Results:"
	        android:textColor="@color/textColor"
	        android:layout_marginBottom="10dp" />
	    <TextView
	        android:id="@+id/GameResultsScoreText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:textSize="14pt"
	        android:textColor="@color/textColor" />
    </LinearLayout>

</LinearLayout>