<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/backgroundBlue"
    tools:context="com.searchgame.activity.PlayGameActivity$PlaceholderFragment"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/PickCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="7dp"
        android:gravity="center"
        android:text="Choose a Search Cateogry:"
        android:textSize="10pt"
        android:textColor="@color/textColor" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/PickCategory"
        android:orientation="vertical"
        android:gravity="center" >
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
	        <LinearLayout
	            android:id="@+id/Categories1"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:orientation="horizontal"
	            android:baselineAligned="false" >
	
	            <RelativeLayout
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:padding="@dimen/pick_category_padding"
	                android:layout_weight="1" >
	
	                <Button
	                    android:id="@+id/Category1Button"
	                    android:layout_width="match_parent"
	                    android:layout_height="match_parent"
                        android:background="@color/buttonBlue"
                        android:textColor="@color/textColor"
	                    android:onClick="pickCategoryOnClick" />
	            </RelativeLayout>
	
	            <RelativeLayout
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:padding="@dimen/pick_category_padding"
	                android:layout_weight="1" >
	
	                <Button
	                    android:id="@+id/Category2Button"
	                    android:layout_width="match_parent"
	                    android:layout_height="match_parent"
	                    android:textColor="@color/textColor"
	                    android:background="@color/buttonBlue"
	                    android:onClick="pickCategoryOnClick" />
	            </RelativeLayout>
	        </LinearLayout>
	    </RelativeLayout>
	    
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
	        <LinearLayout
	            android:id="@+id/Categories2"
	            android:layout_width="match_parent"
			    android:layout_height="match_parent"
	            android:orientation="horizontal" >
	
	            <RelativeLayout
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:padding="@dimen/pick_category_padding"
	                android:layout_weight="1" >
	
	                <Button
	                    android:id="@+id/Category3Button"
	                    android:layout_width="match_parent"
	                    android:layout_height="match_parent"
	                    android:background="@color/buttonBlue"
	                    android:textColor="@color/textColor"
	                    android:onClick="pickCategoryOnClick" />
	            </RelativeLayout>
	
	            <RelativeLayout
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:padding="@dimen/pick_category_padding"
	                android:layout_weight="1" >
	
	                <Button
	                    android:id="@+id/Category4Button"
	                    android:layout_width="match_parent"
	                    android:layout_height="match_parent"
	                    android:background="@color/buttonBlue"
	                    android:textColor="@color/textColor"
	                    android:onClick="pickCategoryOnClick" />
	            </RelativeLayout>
	        </LinearLayout>
	    </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >        
	        <LinearLayout
	            android:id="@+id/Categories3"
	            android:layout_width="match_parent"
			    android:layout_height="match_parent"
	            android:orientation="horizontal" >
	
	            <RelativeLayout
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:padding="@dimen/pick_category_padding"
	                android:layout_weight="1" >
	
	                <Button
	                    android:id="@+id/Category5Button"
	                    android:layout_width="match_parent"
	                    android:layout_height="match_parent"
	                    android:background="@color/buttonBlue"
	                    android:textColor="@color/textColor"
	                    android:onClick="pickCategoryOnClick" />
	            </RelativeLayout>
	
	            <RelativeLayout
	                android:layout_width="0dp"
	                android:layout_height="match_parent"
	                android:padding="@dimen/pick_category_padding"
	                android:layout_weight="1" >
	
	                <Button
	                    android:id="@+id/Category6Button"
	                    android:layout_width="match_parent"
	                    android:layout_height="match_parent"
	                    android:background="@color/buttonBlue"
	                    android:textColor="@color/textColor"
	                    android:onClick="pickCategoryOnClick" />
	            </RelativeLayout>
	        </LinearLayout>
	    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="@dimen/pick_category_padding"
            android:layout_weight="1" >
	        <Button
	            android:id="@+id/ChooseRandomButton"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:background="@color/buttonBlue"
	            android:textColor="@color/textColor"
	            android:onClick="pickCategoryOnClick" />
	    </RelativeLayout>
    </LinearLayout>

</LinearLayout>